{
  "name": "api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/api",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "dotnet build",
        "cwd": "apps/api"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "dotnet run",
        "cwd": "apps/api"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "dotnet format apps/api/Voli.Api.csproj --verify-no-changes",
        "description": "Check code formatting"
      }
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "dotnet format apps/api/Voli.Api.csproj",
        "description": "Format code"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "dotnet test",
        "cwd": "apps/api"
      }
    },
    "openapi": {
      "executor": "nx:run-commands",
      "options": {
        "command": "curl http://localhost:5000/swagger/v1/swagger.json -o libs/api-client/openapi.json",
        "description": "Fetch OpenAPI spec from running API"
      }
    }
  }
}

